<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isExtend"
            type="boolean" />

        <variable
            name="starCount"
            type="int"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/include_divide_header"
            layout="@layout/layout_divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_select_ration"
            layout="@layout/layout_star_ratio"
            starCount="@{starCount}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_x_small"
            android:layout_marginTop="4dp"
            android:visibility="@{isExtend ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_divide_header"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hint_write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_x_small"
            android:layout_marginRight="@dimen/space_x_small"
            android:layout_marginBottom="@dimen/space_median"
            android:text="@string/write_reply_hint"
            android:visibility="@{!isExtend}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_write_reply"
            app:layout_constraintTop_toBottomOf="@+id/include_select_ration"
            app:layout_goneMarginTop="@dimen/space_median" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_write_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_x_small"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/space_x_small"
            android:background="@null"
            android:hint="@string/write_reply_hint2"
            android:textSize="14sp"
            android:maxLength="150"
            android:maxLines="3"
            android:visibility="@{isExtend}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_select_ration" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_write_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x_small"
            android:layout_marginBottom="@dimen/space_x_small"
            android:text="@string/write"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tie_write_review"
            app:layout_goneMarginTop="@dimen/space_median" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>