<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.teame.boostcamp.myapplication.model.entitiy.Goods" />

        <variable
            name="starCount"
            type="int" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_check_anim"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guideline_check"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_fileName="animation_check.json" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{String.format(@string/goods_count,item.count)}"
                android:textSize="11sp"
                android:visibility="@{item.count!=0}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guideline_check" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="60dp" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/np_count"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline_check"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:np_dividerColor="@color/colorPrimaryDark"
                app:np_dividerDistance="24dp"
                app:np_max="99"
                app:np_min="1"
                app:np_selectedTextColor="@color/colorPrimaryDark"
                app:np_selectedTextSize="14sp"
                app:np_textSize="12sp"></com.shawnlin.numberpicker.NumberPicker>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_item_image"
                    error="@{@drawable/ic_no_image}"
                    imgUrl="@{item.img}"
                    rounded="@{4}"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/btn_bottom_sns" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_name"
                    style="@style/Widget.MyListItem.TextView"
                    android:text="@{item.name}"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_ratio"
                    app:layout_constraintLeft_toRightOf="@id/iv_item_image"
                    app:layout_constraintTop_toTopOf="@+id/iv_item_image"
                    app:layout_constraintVertical_chainStyle="spread_inside"
                    tools:text="이름" />

                <include
                    android:id="@+id/include_rating"
                    layout="@layout/layout_star_ratio"
                    starCount="@{starCount}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_min_price"
                    app:layout_constraintLeft_toRightOf="@+id/iv_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_ratio"
                    style="@style/Widget.MyListItem.TextView"
                    android:text="@{item.ratio}"
                    app:layout_constraintBottom_toBottomOf="@id/include_rating"
                    app:layout_constraintLeft_toRightOf="@+id/include_rating"
                    tools:text="8.55" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_min_text"
                    style="@style/Widget.MyListItem.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.format(@string/min_price(item.Lprice))}"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_item_image"
                    app:layout_constraintLeft_toRightOf="@+id/iv_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_ratio"
                    tools:text="10,000원" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_blur"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/colorBlurGray"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_show_item_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/space_x_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/btn_show_detail" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
