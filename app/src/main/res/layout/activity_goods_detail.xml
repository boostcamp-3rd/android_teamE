<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.teame.boostcamp.myapplication.model.entitiy.Goods" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDescription="@xml/motion_item_root">

                <include
                    android:id="@+id/include_loading"
                    layout="@layout/layout_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.teame.boostcamp.myapplication.util.view.SquareImageView
                    android:id="@+id/iv_item_image"
                    error="@{@drawable/ic_no_image}"
                    imgUrl="@{item.img}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_title"
                    style="@style/Widget.DetailItem.TextView"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/space_x_small"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="2"
                    android:text="@{item.name}"
                    app:layout_constraintBottom_toTopOf="@+id/include_rating"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_item_image"
                    tools:text="동전파스" />

                <include
                    android:id="@+id/include_rating"
                    layout="@layout/layout_star_ratio"
                    starCount="@{item.ratio.intValue()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/space_x_small"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_min_price"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_ratio"
                    style="@style/Widget.DetailItem.TextView"
                    android:layout_marginLeft="4dp"
                    android:text="@{item.ratio}"
                    app:layout_constraintBottom_toBottomOf="@+id/include_rating"
                    app:layout_constraintLeft_toRightOf="@+id/include_rating"
                    app:layout_constraintTop_toTopOf="@+id/include_rating"
                    tools:text="8.55" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    app:layout_constraintBottom_toTopOf="@id/view_divide_header"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@drawable/btn_heart" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_min_price"
                    style="@style/Widget.DetailItem.TextView"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="@{String.format(@string/min_price(item.lprice))}"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toTopOf="@+id/view_divide_header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include_rating"
                    tools:text="최저가 : 10,000" />

                <View
                    android:id="@+id/view_divide_header"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/colorDivide"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_min_price" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_replyList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_median"
                    android:layout_marginRight="@dimen/space_median"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_divide_header"
                    tools:listitem="@layout/item_detail_reply" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorMyListAppBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView2"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:background="@drawable/layout_accent_round_board"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/add_goods"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatTextView3"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView3"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:background="@drawable/layout_accent_round_stroke"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/write_reply"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/appCompatTextView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>