<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.teame.boostcamp.myapplication.model.entitiy.Goods"/>
    </data>


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_item_root">


        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/ct_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:minHeight="50dp"
            app:layoutDescription="@xml/motion_item_header"
            app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_item_image"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:src="@drawable/image_item_test" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_title"
                style="@style/Widget.DetailItem.TextView"
                android:layout_marginLeft="@dimen/space_large"
                android:text="동전파스"
                tools:text="동전파스" />

            <include
                android:id="@+id/include_rating"
                layout="@layout/layout_star_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_ratio"
                style="@style/Widget.DetailItem.TextView"
                android:text="8.55"
                app:layout_constraintBottom_toBottomOf="@+id/include_rating"
                app:layout_constraintLeft_toRightOf="@+id/include_rating"
                app:layout_constraintTop_toTopOf="@+id/include_rating"
                tools:text="8.55" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_min_price"
                style="@style/Widget.DetailItem.TextView"
                android:layout_marginLeft="@dimen/space_x_large"
                android:text="최저가 : 10,000"
                tools:text="최저가 : 10,000" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="350dp" />

        </androidx.constraintlayout.motion.widget.MotionLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <View
                android:id="@+id/include_divide_header"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorDivide"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_replyList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_divide_header"
                tools:listitem="@layout/item_detail_reply" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_fake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/et_review"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/et_review"
            layout="@layout/layout_bottom_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>