<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_text"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_indicate">

            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="지도에서 선택"
                android:textSize="18sp"/>

        </androidx.appcompat.widget.Toolbar>


        <View
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_text"
            app:layout_constraintBottom_toTopOf="@id/tv_indicate"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:paddingTop="4dp"
            android:id="@+id/tv_indicate"
            android:background="@color/colorWhite"
            android:text="지도를 움직여 아이콘을 원하는 위치로 옮기세요"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_text"
            app:layout_constraintBottom_toTopOf="@id/mv_googlemap"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mv_googlemap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_indicate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:visibility="visible"
            app:srcCompat="@drawable/btn_location_marker"
            app:layout_constraintTop_toBottomOf="@id/tv_indicate"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x_large"
            android:layout_marginRight="@dimen/space_median"
            android:backgroundTint="@color/colorWhite"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_current_location" />

        <FrameLayout
            android:id="@+id/view_userpininfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"/>

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_current_place"
            android:layout_marginLeft="@dimen/space_x_small"
            android:layout_width="0dp"
            android:ellipsize="none"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline_text"
            app:layout_constraintTop_toTopOf="@id/fab_set_start"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_text"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent="0.7"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_searchloading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/view_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:borderWidth="0dp"
            app:layout_constraintVertical_bias="0.2"
            android:id="@+id/fab_set_start"
            android:backgroundTint="@color/colorPrimary"
            app:elevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_median"
            app:srcCompat="@drawable/img_direction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_bottom"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_set_start"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/fab_set_start"
            app:layout_constraintTop_toBottomOf="@id/fab_set_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/fab_set_start"
            android:text="여행지 선택"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
