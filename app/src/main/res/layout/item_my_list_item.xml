<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.teame.boostcamp.myapplication.model.entitiy.Item"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginRight="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_check_anim"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:lottie_fileName="animation_check.json"
            android:layout_gravity="center"
            android:layout_margin="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_item_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    imgUrl="@{item.img}"
                    error="@{@drawable/ic_no_image}"
                    rounded="@{4}"
                    tools:src="@drawable/btn_bottom_sns" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_name"
                    style="@style/Widget.MyListItem.TextView"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintVertical_chainStyle="spread_inside"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_ratio"
                    app:layout_constraintLeft_toRightOf="@id/iv_item_image"
                    app:layout_constraintTop_toTopOf="@+id/iv_item_image"
                    android:text="@{item.name}"
                    tools:text="이름" />

                <include
                    android:id="@+id/include_rating"
                    layout="@layout/layout_star_ratio"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_min_price"
                    app:layout_constraintLeft_toRightOf="@+id/iv_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_ratio"
                    style="@style/Widget.MyListItem.TextView"
                    app:layout_constraintBottom_toBottomOf="@id/include_rating"
                    app:layout_constraintLeft_toRightOf="@+id/include_rating"
                    android:text="@{item.ratio}"
                    tools:text="8.55" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_min_text"
                    style="@style/Widget.MyListItem.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_item_min_parice"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_item_image"
                    app:layout_constraintLeft_toRightOf="@+id/iv_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_ratio"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_item_min_price"
                    style="@style/Widget.MyListItem.TextView"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_item_image"
                    app:layout_constraintLeft_toRightOf="@+id/tv_item_min_text"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_ratio"
                    android:text="@{item.lPrice}"
                    tools:text="10,000원" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_show_item_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/space_x_small"
                    app:srcCompat="@drawable/btn_item_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
